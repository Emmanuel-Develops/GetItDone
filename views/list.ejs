<%- include('header') -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1> 
    </div>
<div class="box">
    <!-- list item styles --> 
    <%  newListItems.forEach(function(item){ %>
        <div class = "item">
            <input type="checkbox">
            <p><%= item.name %></p>
        </div>
    <% }) %>

        <!-- Form Styles -->
        <form class="item" action="/" method = "post">
            <input type="text" name ="item" placeholder="Enter a new item" autocomplete="off">
            <button type="submit" name="list" value= <%=  listTitle %>>+</button>
        </form>

</div>  
<%- include('footer') -%>