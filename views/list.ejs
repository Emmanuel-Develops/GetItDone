<%- include('header') -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1> 
    </div>
<div class="box">
    <!-- list item styles --> 
    <%  newListItems.forEach(function(item){ %>
        <form action="/delete" method = "post">
            <div class = "item">
                <input type="checkbox" name ="checkbox"  
                value ="<%=item._id%>"
                onChange = "this.form.submit()">
                <p><%= item.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%=listTitle%>" autocomplete="off">
        </form>
    <% }) %>

       <!-- Form Styles -->
    <form class="item" action="/" method = "post">
        <input type="text" name ="newItem" placeholder="Enter a new item" autocomplete="off">
        <button type="submit"  name="list" value = '<%=listTitle%>' value= <%=  listTitle %>>+</button>
    </form>

</div>  
<%- include('footer') -%>