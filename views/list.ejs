<%- include('header') -%>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1> 
    </div>
<div class="box">
    <!-- list item styles -->
        <% for (var i = 0; i <newListItems.length; i++){ %>
            <div class="item">
                <input type="checkbox" >
                <p><%= newListItems[i] %></p>
            </div>
        <% } %>

        <!-- Form Styles -->
        <form class="item" action="/" method = "post">
            <input type="text" name ="item" placeholder="Enter a new item" autocomplete="off">
            <button type="submit" name="list" value= <%=  listTitle %>>+</button>
        </form>

</div>  
<%- include('footer') -%>